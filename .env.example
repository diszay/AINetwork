# NetArchon Environment Configuration

# Database Configuration
NETARCHON_DB_PATH=./data/metrics.db
NETARCHON_CONFIG_PATH=./config/netarchon.yaml

# Web Interface Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# Network Configuration
NETARCHON_HOME_NETWORK=192.168.1.0/24
NETARCHON_SERVER_IP=192.168.1.100

# Device IP Addresses
XFINITY_GATEWAY_IP=192.168.1.1
ARRIS_MODEM_IP=192.168.100.1
NETGEAR_ROUTER_IP=192.168.1.10
NETGEAR_SATELLITE_1_IP=192.168.1.2
NETGEAR_SATELLITE_2_IP=192.168.1.3

# RustDesk Configuration
RUSTDESK_SERVER_PORT=21118
RUSTDESK_RELAY_PORT=21117
RUSTDESK_DATA_PATH=./data/rustdesk

# Security Configuration
NETARCHON_ENCRYPTION_KEY_PATH=./config/.encryption_key
NETARCHON_ENABLE_AUTH=true

# Email Configuration (Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com
EMAIL_TO=your-email@gmail.com

# Slack Configuration (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#network-alerts

# Performance Configuration
MAX_MEMORY_MB=2048
MAX_CPU_PERCENT=80
CACHE_SIZE_MB=256

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/netarchon.log